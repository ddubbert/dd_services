FROM node:14.17.6-alpine

WORKDIR /services/sessions

RUN npm install yarn

COPY package*.json ./

COPY keycloak.json ./

COPY yarn.lock ./

COPY tsconfig.json ./

COPY prisma ./prisma/

COPY accessKey.pem ./

COPY src ./src/

RUN yarn install

RUN npx prisma generate --schema=./prisma/schema.prisma

CMD [ "yarn", "start" ]
